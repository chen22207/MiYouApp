<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<include layout="@layout/activity_base_title_bar"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/background"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_margin="@dimen/large_space"
				android:layout_marginTop="@dimen/super_space"
				android:text="@string/pulish_house_mianji"
				android:textSize="@dimen/large_text_size"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:focusable="true"
					android:focusableInTouchMode="true"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<EditText
						android:id="@+id/publish_type_mianji_et"
						android:layout_width="wrap_content"
						android:layout_height="35dp"
						android:layout_margin="@dimen/middle_space"
						android:background="@drawable/shape_gray_rectangle_border_bg"
						android:inputType="numberSigned"
						android:minWidth="100dp"
						android:padding="@dimen/small_space"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="㎡"/>
				</LinearLayout>
			</RelativeLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_margin="@dimen/large_space"
				android:layout_marginTop="@dimen/super_space"
				android:text="@string/publish2_zhuangxiu"
				android:textSize="@dimen/large_text_size"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:orientation="vertical">

				<RadioGroup
					android:id="@+id/publish_type_zhuangxiu_rg"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:background="@color/white"
					android:orientation="horizontal"
					android:padding="@dimen/middle_space">

					<RadioButton
						android:id="@+id/publish_type_jingzhuang_rb"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:button="@drawable/icon_hook_selector"
						android:checked="true"
						android:padding="@dimen/middle_space"
						android:text="精装"
						android:textColor="@drawable/selector_color_checked_blue_black"/>


					<RadioButton
						android:id="@+id/publish_type_haohua_rb"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:button="@drawable/icon_hook_selector"
						android:padding="@dimen/middle_space"
						android:text="豪华"
						android:textColor="@drawable/selector_color_checked_blue_black"/>


					<RadioButton
						android:id="@+id/publish_type_zhongdeng_rb"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:button="@drawable/icon_hook_selector"
						android:padding="@dimen/middle_space"
						android:text="中等"
						android:textColor="@drawable/selector_color_checked_blue_black"/>


					<RadioButton
						android:id="@+id/publish_type_jiandan_rb"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:button="@drawable/icon_hook_selector"
						android:padding="@dimen/middle_space"
						android:text="简单"
						android:textColor="@drawable/selector_color_checked_blue_black"/>

				</RadioGroup>
			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_margin="@dimen/large_space"
				android:layout_marginTop="@dimen/super_space"
				android:text="@string/publish_house_chaoxiang"
				android:textSize="@dimen/large_text_size"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:orientation="vertical">

				<RadioGroup
					android:id="@+id/publish_type_chaoxiang_rg"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:orientation="horizontal"
					android:padding="@dimen/middle_space">

					<RadioButton
						android:id="@+id/publish_type_east_rb"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:button="@drawable/icon_hook_selector"
						android:checked="true"
						android:padding="@dimen/middle_space"
						android:text="东"
						android:textColor="@drawable/selector_color_checked_blue_black"/>


					<RadioButton
						android:id="@+id/publish_type_south_rb"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:button="@drawable/icon_hook_selector"
						android:padding="@dimen/middle_space"
						android:text="南"
						android:textColor="@drawable/selector_color_checked_blue_black"/>


					<RadioButton
						android:id="@+id/publish_type_west_rb"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:button="@drawable/icon_hook_selector"
						android:padding="@dimen/middle_space"
						android:text="西"
						android:textColor="@drawable/selector_color_checked_blue_black"/>


					<RadioButton
						android:id="@+id/publish_type_north_rb"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:button="@drawable/icon_hook_selector"
						android:padding="@dimen/middle_space"
						android:text="北"
						android:textColor="@drawable/selector_color_checked_blue_black"/>

				</RadioGroup>
			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_margin="@dimen/large_space"
				android:layout_marginTop="@dimen/super_space"
				android:text="@string/publish_house_type"
				android:textSize="@dimen/large_text_size"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:layout_margin="@dimen/middle_space"
						android:text="@string/publish_house_type_shi"/>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@color/white"
						android:orientation="horizontal"
						android:padding="@dimen/large_space">

						<ImageView
							android:id="@+id/publish_type_shi_jian_iv"
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="3"
							android:scaleType="center"
							android:src="@drawable/icon_fangxing_jian"/>


						<TextView
							android:id="@+id/publish_type_shi_number_tv"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="2"
							android:background="@drawable/shape_gray_rectangle_border_bg"
							android:gravity="center"
							android:inputType=""
							android:paddingBottom="@dimen/middle_space"
							android:paddingTop="@dimen/middle_space"
							android:text="1"/>

						<ImageView
							android:id="@+id/publish_type_shi_jia_iv"
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="3"
							android:scaleType="center"
							android:src="@drawable/icon_fangxing_jia"/>
					</LinearLayout>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:layout_margin="@dimen/middle_space"
						android:text="@string/publish_house_type_ting"/>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@color/white"
						android:orientation="horizontal"
						android:padding="@dimen/large_space">

						<ImageView
							android:id="@+id/publish_type_ting_jian_iv"
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="3"
							android:scaleType="center"
							android:src="@drawable/icon_fangxing_jian"/>

						<TextView
							android:id="@+id/publish_type_ting_number_tv"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="2"
							android:background="@drawable/shape_gray_rectangle_border_bg"
							android:gravity="center"
							android:paddingBottom="@dimen/middle_space"
							android:paddingTop="@dimen/middle_space"
							android:text="1"/>

						<ImageView
							android:id="@+id/publish_type_ting_jia_iv"
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="3"
							android:scaleType="center"
							android:src="@drawable/icon_fangxing_jia"/>
					</LinearLayout>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:layout_margin="@dimen/middle_space"
						android:text="@string/publish_house_type_wei"/>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@color/white"
						android:orientation="horizontal"
						android:padding="@dimen/large_space">

						<ImageView
							android:id="@+id/publish_type_wei_jian_iv"
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="3"
							android:scaleType="center"
							android:src="@drawable/icon_fangxing_jian"/>

						<TextView
							android:id="@+id/publish_type_wei_number_tv"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="2"
							android:background="@drawable/shape_gray_rectangle_border_bg"
							android:gravity="center"
							android:paddingBottom="@dimen/middle_space"
							android:paddingTop="@dimen/middle_space"
							android:text="1"/>

						<ImageView
							android:id="@+id/publish_type_wei_jia_iv"
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="3"
							android:scaleType="center"
							android:src="@drawable/icon_fangxing_jia"/>
					</LinearLayout>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:layout_margin="@dimen/middle_space"
						android:text="@string/publish_house_type_yangtai"/>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@color/white"
						android:orientation="horizontal"
						android:padding="@dimen/large_space">

						<ImageView
							android:id="@+id/publish_type_yangtai_jian_iv"
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="3"
							android:scaleType="center"
							android:src="@drawable/icon_fangxing_jian"/>

						<TextView
							android:id="@+id/publish_type_yangtai_number_tv"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="2"
							android:background="@drawable/shape_gray_rectangle_border_bg"
							android:gravity="center"
							android:paddingBottom="@dimen/middle_space"
							android:paddingTop="@dimen/middle_space"
							android:text="1"/>

						<ImageView
							android:id="@+id/publish_type_yangtai_jia_iv"
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="3"
							android:scaleType="center"
							android:src="@drawable/icon_fangxing_jia"/>

					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<Button
				android:id="@+id/publish_house_type_next_bt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/middle_space"
				android:layout_marginLeft="@dimen/super_space"
				android:layout_marginRight="@dimen/super_space"
				android:layout_marginTop="@dimen/middle_space"
				android:background="@drawable/shape_blue_rectangle_bg"
				android:text="@string/publish_next"
				android:textColor="@color/white"
				android:textSize="@dimen/large_text_size"
				android:visibility="gone"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>

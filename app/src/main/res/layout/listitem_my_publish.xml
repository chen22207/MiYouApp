<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/middle_space">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/listitem_my_publish_time_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="2016-02-02"/>

		<TextView
			android:id="@+id/listitem_my_publish_status_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			tools:text="已发布"/>
	</RelativeLayout>

	<TextView
		android:id="@+id/listitem_my_publish_address_name_tv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/small_space"
		android:layout_marginTop="@dimen/small_space"
		android:textSize="@dimen/middle_text_size"
		android:textStyle="bold"
		tools:text="碧水豪园"/>

	<include layout="@layout/line_break"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/small_space"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/listitem_my_publish_iv"
			android:layout_width="0dp"
			android:layout_height="80dp"
			android:layout_weight="1"
			android:scaleType="centerCrop"
			tools:src="@drawable/f1"/>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:orientation="vertical"
			android:padding="@dimen/middle_space">

			<TextView
				android:id="@+id/listitem_my_publish_address_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:singleLine="true"
				tools:text="的时刻垃圾费粮食局放辣椒酸辣粉就"/>

			<TextView
				android:id="@+id/listitem_my_publish_type_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/middle_space"
				android:singleLine="true"
				tools:text="整套"/>

			<TextView
				android:id="@+id/listitem_my_publish_price_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/middle_space"
				android:singleLine="true"
				tools:text="1800/月"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
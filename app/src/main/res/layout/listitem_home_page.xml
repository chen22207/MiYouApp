<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:cs="http://schemas.android.com/apk/res-auto"
	android:background="@color/background">

	<com.cs.widget.imageview.MaterialImageView
		android:id="@+id/list_item_home_page_bg_civ"
		android:layout_width="match_parent"
		android:layout_height="220dp"
		android:scaleType="fitXY"
		tools:src="@drawable/f1"
		cs:use_white_bg="false"
		cs:shadow_size="15"
		cs:radius_size="15" />

	<TextView
		android:id="@+id/list_item_home_page_house_title_tv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:textColor="@color/white"
		android:textSize="@dimen/large_text_size"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="@dimen/large_space"
		android:maxLength="10"
		android:ellipsize="end"
		tools:text="西湖文化广场地铁旁，豪华精装修"
		tools:textColor="@color/black" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="@dimen/large_space"
		android:gravity="center_horizontal"
		android:layout_marginRight="@dimen/middle_space">

		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/list_item_home_page_head_portrait_iv"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:src="@drawable/ic_head_image"
			cs:civ_border_width="2dp"
			cs:civ_border_color="@color/white" />

		<TextView
			android:id="@+id/list_item_home_page_price_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@color/transparent_50_black"
			android:textColor="@color/white"
			tools:text="￥3600"
			android:padding="@dimen/middle_space"
			android:layout_marginTop="@dimen/middle_space" />

	</LinearLayout>

</RelativeLayout>
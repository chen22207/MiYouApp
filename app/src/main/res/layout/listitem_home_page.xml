<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:cs="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@color/background">

	<com.cs.widget.imageview.MaterialImageView
		android:id="@+id/list_item_home_page_bg_civ"
		android:layout_width="match_parent"
		android:layout_height="220dp"
		android:scaleType="centerCrop"
		cs:radius_size="10"
		cs:shadow_size="5"
		cs:use_white_bg="false"
		tools:src="@drawable/f1"/>

	<TextView
		android:id="@+id/list_item_home_page_house_title_tv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="40dp"
		android:ellipsize="end"
		android:maxLength="10"
		android:textColor="@color/white"
		android:textSize="@dimen/middle_text_size"
		tools:text="西湖文化广场地铁旁，豪华精装修" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_marginBottom="30dp"
		android:layout_marginRight="@dimen/huge_space"
		android:gravity="center_horizontal"
		android:orientation="vertical">

		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/list_item_home_page_head_portrait_iv"
			android:layout_width="45dp"
			android:layout_height="45dp"
			android:src="@drawable/ic_head_image"
			cs:civ_border_color="@color/white"
			cs:civ_border_width="2dp"/>

		<TextView
			android:id="@+id/list_item_home_page_price_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/middle_space"
			android:background="@color/transparent_50_black"
			android:padding="@dimen/small_space"
			android:textColor="@color/white"
			android:textSize="10sp"
			tools:text="￥3600"/>

	</LinearLayout>

</RelativeLayout>
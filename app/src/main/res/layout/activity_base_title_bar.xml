<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/base_header_rl"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="50dp"
	android:background="@color/colorPrimary">

	<ImageView
		android:id="@+id/base_header_back_iv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:padding="@dimen/middle_space"
		android:src="@drawable/ic_back_white"
		android:visibility="gone"
		tools:visibility="visible"/>

	<TextView
        android:id="@+id/base_header_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text_size"
        tools:text="标题" />

	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true">

		<Button
			android:id="@+id/base_header_right_bt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			android:textColor="@color/white"
			android:textSize="@dimen/middle_text_size"
			tools:text="其他"/>

		<ImageView
			android:id="@+id/base_header_right_iv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:padding="@dimen/middle_space"
			tools:src="@drawable/icon_collected"/>

	</FrameLayout>


</RelativeLayout>
